extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1 #{projects[projectIndex].project_name}

        p.lead.text-light #{projects[projectIndex].description}

        a(href='' + projects[projectIndex].live_link target='_blank') Live Demo
        a(href='' + projects[projectIndex].github_link target='_blank') GitHub Repo

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each technology in projects[projectIndex].technologies
            li= technology
       
    each url in projects[projectIndex].image_urls 
      img.image(src='/' + url)
    